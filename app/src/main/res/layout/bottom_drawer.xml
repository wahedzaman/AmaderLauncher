<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/bottomDrawerViewHolder"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2">

</LinearLayout>

    <LinearLayout
        android:background="@drawable/blueblurbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight="1"
            android:background="@color/blurTransparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                    <ImageView
                        android:src="@drawable/defaultaddicon"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bottomDrawerApp1"/>
                    <ImageView
                        android:src="@drawable/defaultaddicon"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bottomDrawerApp2"/>
                    <ImageView
                        android:src="@drawable/defaultaddicon"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bottomDrawerApp3"/>
                    <ImageView
                        android:src="@drawable/defaultaddicon"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bottomDrawerApp4"/>
                    <ImageView
                        android:src="@drawable/defaultaddicon"
                        android:background="@null"
                        android:layout_weight="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/bottomDrawerApp5"/>


            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp6"/>
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp7"/>
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp8"/>
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp9"/>
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp10"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp11"/>
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp12"/>
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp13"/>
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp14"/>
                <ImageView
                    android:src="@drawable/defaultaddicon"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/bottomDrawerApp15"/>

            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="1.5dp"
            android:background="@color/blurTransparent"
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>

                <ImageView
                    android:id="@+id/airplaneToggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/airplaneblack"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:id="@+id/wifiToggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/wifiblack"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:id="@+id/bluetoothToggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bluetoothblack"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:id="@+id/rotationToggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rotationblack"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:id="@+id/lightToggle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lightblack"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/brightnessblack"
                    android:layout_weight="10"/>

                <SeekBar
                    android:paddingTop="0dp"
                    android:layout_marginTop="0dp"
                    android:thumbOffset="0dp"
                    android:max="250"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:thumb="@drawable/thumb_drawable"
                    android:layout_weight="1"
                    android:id="@+id/bottomDrawerAppBrightnessSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/feedback"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>
                <ImageView
                    android:onClick="preferenceButtonClicked"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/preference"
                    android:layout_weight="8"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
